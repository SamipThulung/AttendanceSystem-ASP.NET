@model IEnumerable<UserAuthentication.Models.Attendance>
@{
    ViewBag.Title = "Summary";
}

<h2>Summary</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.DropDownList("courselist", null, htmlAttributes: new { @class = "form-control" })
            @Html.TextBox("DatePicker11", null, new { @class = "form-control", @type = "Date" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submitButton" value="Record" class="btn btn-default" id="submitButton" />



        </div>
    </div>

}
<h2>Weekly Report</h2>
<table class="table">

    <tr>
        <th>Course Title</th>
        <th>Days Attended in a Week</th>
        <th>Status</th>
    </tr>
    @{ var weekttitle = "";}
    @foreach (UserAuthentication.Models.Attendance item in (ViewBag.WeeklyReport as List<UserAuthentication.Models.Attendance>))
    {
        <tr>
            @{

                if (weekttitle != item.Title)
                {
                    weekttitle = item.Title;
                    <td>@Html.DisplayFor(modelItem => item.Title) </td>
                }
                else
                {
                    <td></td>
                }
            }
     
            <td>@Html.DisplayFor(modelItem => item.Count) </td>
            <td>@Html.DisplayFor(modelItem => item.Status) </td>
        </tr>
     }
       
    </table>

<h2>Monthly Report</h2>
<table class="table">

    <tr>
        <th>Course Title</th>
        <th>Days Attended in a Month</th>
        <th>Status</th>
    </tr>
        @{ var title = "";}
        @foreach (UserAuthentication.Models.Attendance item in (ViewBag.MonthlyReport as List<UserAuthentication.Models.Attendance>))
        {
    <tr>
        @{
            
            if (title != item.Title)
            {
                title = item.Title;
                <td>@Html.DisplayFor(modelItem => item.Title) </td>
            }
            else
            {
                <td></td>
            }
        }

        <td>@Html.DisplayFor(modelItem => item.Count) </td>
        <td>@Html.DisplayFor(modelItem => item.Status) </td>

    </tr>
        }
   
    </table>

