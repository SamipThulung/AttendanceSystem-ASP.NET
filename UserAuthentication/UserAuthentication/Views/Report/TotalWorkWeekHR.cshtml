@model IEnumerable<List<Dictionary<string,string>>>
@{
    ViewBag.Title = "TotalWorkWeekHR";
}

<h2>TotalWorkWeekHR</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.DropDownList("StaffID", null, new { @class = "form-control", @type = "Date" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submitButton" value="Record" class="btn btn-default" id="submitButton" />



        </div>
    </div>

}
    <table class="table">
        <tr>
            <th>
                FirstName
            </th>
            <th>
                LastName
            </th>
            <th>
                Course Details
            </th>
            <th>
                Job Details
            </th>
            <th>
                Contact Number
            </th>
            <th>
                Email
            </th>
            <th>
                Start Time
            </th>
            <th>
               End Time
            </th>

        </tr>

        @foreach (var item in (ViewBag.Details as List<Dictionary<string,string>>))
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item["FirstName"])
            </td>

            <td>
                @Html.DisplayFor(modelItem => item["LastName"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["CourseDetail"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["JobDetail"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["ContactNo"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["Email"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["StartTime"])
            </td>
            <td>
                @Html.DisplayFor(modelItem => item["EndTime"])
            </td>


        </tr>
        }
        <tr>
            <td colspan="7">Total Hours</td>
            <td>@ViewBag.TotalHr</td>
        </tr>

    </table>