@model IEnumerable<UserAuthentication.Models.Attendance>
@{
    ViewBag.Title = "AbsentWeek";
}

<h2>AbsentWeek</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.TextBox("Date", null, htmlAttributes: new { @class = "form-control" ,@type="Date"})
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submitButton" value="Record" class="btn btn-default" id="submitButton" />



        </div>
    </div>

}
    <table class="table">
        <tr>
            <th>
                Course ID
            </th>
            <th>
                Student Name
            </th>
            <th>
                Title
            </th>
            <th>
                Attendance Date
            </th>
            <th>
                Status
            </th>

        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttendanceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>

        </tr>
        }

    </table>
